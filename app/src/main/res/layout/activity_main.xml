<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        tools:context=".ui.activities.MainActivity">

        <ImageView
            android:id="@+id/imagenPortada"
            android:layout_width="178dp"
            android:layout_height="162dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo_app" />

        <TextView
            android:id="@+id/txtPedidosOnline"
            style="@style/textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimLogin"
            android:layout_marginTop="@dimen/marginTopPedidos"
            android:layout_marginBottom="@dimen/marginBottom"
            android:layout_marginEnd="@dimen/dimLogin"
            android:includeFontPadding="false"
            android:text="@string/app_titulo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_saludo"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginStart="@dimen/dimLogin"
            android:layout_marginTop="@dimen/marginTop"
            android:layout_marginBottom="@dimen/marginBottom"
            android:layout_marginEnd="@dimen/dimLogin"
            android:text="@string/app_welcome_menu"
            android:textColor="@color/font_color_dm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtPedidosOnline" />

        <TextView
            android:id="@+id/txt_email"
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:layout_marginStart="@dimen/dimLogin"
            android:layout_marginTop="@dimen/marginTop"
            android:layout_marginBottom="@dimen/marginBottom"
            android:layout_marginEnd="@dimen/dimLogin"
            android:text="Correo"
            android:textColor="@color/principal_color_dm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_saludo" />

        <EditText
            android:id="@+id/txt_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/txtBoxHeight"
            android:layout_marginStart="@dimen/dimLogin"
            android:layout_marginTop="@dimen/marginTop"
            android:layout_marginBottom="@dimen/marginBottom"
            android:layout_marginEnd="@dimen/dimLogin"
            android:gravity="center_vertical"
            android:hint="example@email.com"
            android:textAlignment="gravity"
            android:textColor="@color/black"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_email" />

        <TextView
            android:id="@+id/txt_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimLogin"
            android:layout_marginTop="@dimen/marginTop"
            android:layout_marginBottom="@dimen/marginBottom"
            android:layout_marginEnd="@dimen/dimLogin"
            android:text="ContraseÃ±a"
            android:textColor="@color/principal_color_dm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_name" />

        <EditText
            android:id="@+id/txt_pass"
            android:layout_width="match_parent"
            android:layout_height="@dimen/txtBoxHeight"
            android:layout_marginStart="@dimen/dimLogin"
            android:layout_marginTop="@dimen/marginTop"
            android:layout_marginBottom="@dimen/marginBottom"
            android:layout_marginEnd="@dimen/dimLogin"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="Password"
            android:inputType="textPassword"
            android:textAlignment="gravity"
            android:textColor="@color/black"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_password" />

        <Button
            android:id="@+id/btnLogin"
            style="@style/buttonForm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btnHeight"
            android:layout_marginTop="@dimen/marginTop"
            android:layout_marginBottom="@dimen/marginBottom"
            android:layout_marginEnd="@dimen/dimLogin"
            android:layout_marginStart="@dimen/dimLogin"
            android:text="Ingresar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.434"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_pass" />

        <TextView
            android:id="@+id/txt_login_alt"
            android:layout_height="23dp"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/dimLogin"
            android:layout_marginTop="@dimen/marginTop"
            android:layout_marginBottom="@dimen/marginBottom"
            android:layout_marginEnd="@dimen/dimLogin"
            android:text="@string/app_opciones"
            android:textColor="@color/font_color_dm"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnLogin" />

        <LinearLayout
            android:id="@+id/btn_container"
            android:orientation="horizontal"
            android:layout_width="316dp"
            android:layout_height="47dp"
            android:layout_marginTop="@dimen/marginTop"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_login_alt">

            <Button
                android:id="@+id/btnGoogle"
                style="@style/ButtonGoogle"
                android:layout_width="@dimen/btnWidth"
                android:layout_height="@dimen/btnHeight"
                android:layout_marginEnd="25dp"
                android:text="@string/Google"
                app:icon="@drawable/google_logo"
                app:layout_constraintEnd_toStartOf="@+id/btnFacebook"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_login_alt" />

            <Button
                android:id="@+id/btnMic"
                style="@style/ButtonMic"
                android:layout_width="@dimen/btnWidth"
                android:layout_height="@dimen/btnHeight"
                android:layout_gravity="right"
                android:text="@string/Busqueda_mic"
                app:icon="@drawable/google_mic" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imgHuellaCam"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="@dimen/marginStartEnd"
            android:layout_marginTop="@dimen/marginTop"
            android:layout_marginEnd="100dp"
            app:tint="@color/dark_turquoise"
            android:src="@drawable/baseline_camera_alt_24"
            app:layout_constraintEnd_toStartOf="@+id/imgNotification"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_container" />

        <ImageView
            android:id="@+id/imgNotification"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/marginTop"
            android:layout_marginEnd="@dimen/marginStartEnd"
            app:tint="@color/dark_turquoise"
            android:src="@drawable/baseline_notifications_active_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_container" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

