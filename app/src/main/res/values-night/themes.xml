<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DispositivosMoviles" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="TitleBienvenido">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">28dp</item>
    </style>

    <style name="BotonStyle">
        <item name="android:gravity">center</item>
        <item name="backgroundTint">@color/light_grey</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="FirstFragmentStyle">
        <item name="android:background">@color/light_grey</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="CardViewStyle">
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="cardCornerRadius">15dp</item>
    </style>

    <style name="ThirdFragmentStyle">
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@color/dark_turquoise</item>
    </style>

</resources>